<div id="mod-tier-@Tier">
    <div class="row">
        <div class="col" align="center">
            <h3 class="@getClass()"  @onclick="() => _expand = !_expand">Tier @Tier</h3>
        </div>
    </div>
    <div class="row justify-content-center @getClass()">
    @foreach (var mod in Mods)
    {
        <ArchnemesisModTemplate Model=mod OnClick=OnClick OnMouseOver=OnMouseOver />
    }
    </div>
</div>

@code {
    [Parameter]
    public int Tier { get; set; }
    [Parameter]
    public List<ArchnemesisModViewModel> Mods { get; set; }
    [Parameter]
    public Action<ArchnemesisModViewModel, MouseEventArgs> OnClick { get; set; }
    [Parameter]
    public Action<ArchnemesisModViewModel, MouseEventArgs> OnMouseOver { get; set; }

    private string getClass() => _expand ? "expanded" : "collapsed";

    private bool _expand = true;
}
